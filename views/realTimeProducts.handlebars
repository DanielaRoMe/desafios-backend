<!--Vista de home con los productos en tiempo real -->

<div>
    <h2>Productos almacenados al momento:</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Categoria</th>
            <th>Precio</th>
        </tr>
        {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
            </tr>
        {{/each}}
    </table>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="../public/js/realTimeProducts.js"></script>